# Force exact versions in package-lock.json for reproducibility
save-exact=false

# Use package-lock for deterministic installs
package-lock=true

# Automatically fix package-lock if out of sync
package-lock-only=false

# Engine strict - enforce Node/npm version requirements
engine-strict=true

# Disable automatic updates prompts
update-notifier=false

# Progress bar for better team visibility
progress=true
