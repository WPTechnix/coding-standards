{
    "name": "wptechnix/coding-standards",
    "description": "A modern PHP coding standard (PHPCS) compatible with PSR-12, featuring additional rules for strictness and type safety.",
    "type": "phpcodesniffer-standard",
    "keywords": [
        "phpcs",
        "coding-standards",
        "coding-standard",
        "standards",
        "code-quality",
        "static-analysis",
        "wptechnix",
        "psr-12"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "WPTechnix",
            "email": "developers@wptechnix.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "squizlabs/php_codesniffer": "^3.13.0 || ^4.0",
        "phpcsstandards/phpcsextra": "^1.4",
        "slevomat/coding-standard": "^8.0"
    },
    "suggest": {
        "dealerdirect/phpcodesniffer-composer-installer": "For automatic registration of the coding standard with PHP_CodeSniffer"
    },
    "support": {
        "issues": "https://github.com/wptechnix/coding-standards/issues",
        "source": "https://github.com/wptechnix/coding-standards"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
