{
    "name": "wptechnix/coding-standards",
    "description": "A modern PHP coding standard built on top of PSR-12, with extra enforcements for strictness and type safety.",
    "type": "phpcodesniffer-standard",
    "keywords": [
        "phpcs",
        "standards",
        "coding-standards",
        "code-quality",
        "wptechnix"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "WPTechnix",
            "email": "info@wptechnix.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "squizlabs/php_codesniffer": "^3.13.0 || ^4.0",
        "phpcsstandards/phpcsextra": "^1.4",
        "slevomat/coding-standard": "^8.0"
    },
    "support": {
        "issues": "https://github.com/wptechnix/coding-standards/issues",
        "source": "https://github.com/wptechnix/coding-standards"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
